<!-- modified by xuchao for folder fullscreen 20140515-->
<com.wb.launcher3.Folder
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto/com.wb.launcher3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <com.wb.launcher3.FolderEditText 
        android:id="@+id/folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:hint="@string/folder_hint_text"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:textColorHighlight="#ffCCCCCC"
        android:textCursorDrawable="@null"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:imeOptions="flagNoExtractUi"
        />
    <ImageView
    	android:id="@+id/topline"
    	android:layout_width="match_parent"
    	android:layout_height="1dip"
    	android:src="#ffffffff"
    	android:visibility="invisible" />    
     <!--  
    <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal" >
     <ImageView
    	android:id="@+id/leftline"
    	android:layout_width="1dip"
    	android:layout_height="match_parent"
    	android:src="#ffffffff"
    	android:visibility="invisible" />     
    -->              
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
          <com.wb.launcher3.CellLayout
          android:id="@+id/folder_content"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:cacheColorHint="#00000000"
          android:textColor="#ffffffff"
          android:hapticFeedbackEnabled="false" 
          android:background="@drawable/folder_content_bg"
          android:layerType="hardware"/>    
    </ScrollView>
    <!--  
    <ImageView
    	android:id="@+id/rightline"
    	android:layout_width="1dip"
    	android:layout_height="match_parent"
    	android:src="#ffffffff"
    	android:visibility="invisible" />
    </LinearLayout>
    -->
    <ImageView
    	android:id="@+id/bottomline"
    	android:layout_width="match_parent"
    	android:layout_height="1dip"
    	android:src="#ffffffff"
    	android:visibility="invisible" />
    <!--end -->
</com.wb.launcher3.Folder>
